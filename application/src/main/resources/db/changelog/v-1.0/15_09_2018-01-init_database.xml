<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="15_09_2018-01-create_database-1" author="lyamin">
        <createTable tableName="report">
            <column name="id" type="BIGINT" autoIncrement="true"/>
            <column name="fuel_type" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(20, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="driver_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="15_09_2018-01-create_database-2" author="lyamin">
        <addPrimaryKey tableName="report" columnNames="id"/>
    </changeSet>

</databaseChangeLog>