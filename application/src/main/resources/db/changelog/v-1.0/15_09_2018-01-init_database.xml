<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="15_09_2018-01-create_database-1" author="lyamin">
        <createTable tableName="REPORT">
            <column name="ID" type="BIGINT" autoIncrement="true"/>
            <column name="FUEL_TYPE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="PRICE" type="DECIMAL(20, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="DRIVER_ID" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="DATE" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="15_09_2018-01-create_database-2" author="lyamin">
        <addPrimaryKey tableName="REPORT" columnNames="ID"/>
    </changeSet>

</databaseChangeLog>